  <header class="header">
    <div class="inner">
        <div class="header-menubar hide-on-screen-small">
            <ul class="nav navbar-nav" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <li class="user-menu-button">
              <a href="/search">
                <i class="fa fa-search"></i>
