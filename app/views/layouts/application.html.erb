                    <i class="fa fa-sign-out-alt"></i> ログアウト
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="header-nav">
          <% if user_signed_in? %>
          <% else %>
          <ul>
            <li>
            <%= link_to user_twitter_omniauth_authorize_path,class: "twitter-button" do %>
              <i class="fa fa-twitter"></i> Twitterでログイン
            <% end %>
